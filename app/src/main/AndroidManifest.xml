<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="cz.cvut.fit.android.cerberus">

    <uses-feature
        android:name="android.hardware.camera"
        android:required="false"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <activity
            android:name=".presentation.screens.MainActivity"
            android:screenOrientation="landscape">

            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name="cz.cvut.fit.android.cerberus.presentation.screens.minigames.poacher.PoacherGameActivity"
            android:screenOrientation="landscape"/>

        <activity
            android:name="cz.cvut.fit.android.cerberus.presentation.screens.minigames.porter.PorterGameActivity"
            android:screenOrientation="landscape"/>

        <activity
            android:name="cz.cvut.fit.android.cerberus.presentation.screens.minigames.driver.DriverGameActivity"
            android:screenOrientation="landscape"/>

        <activity
            android:name="cz.cvut.fit.android.cerberus.presentation.screens.minigames.armedescort.ArmedEscortGameActivity"
            android:screenOrientation="landscape"/>

        <activity
            android:name="cz.cvut.fit.android.cerberus.presentation.screens.minigames.translator.TranslatorGameActivity"
            android:screenOrientation="landscape"/>

        <activity
            android:name="cz.cvut.fit.android.cerberus.presentation.screens.minigames.paramedic.ParamedicGameActivity"
            android:screenOrientation="landscape"/>

        <activity
            android:name="cz.cvut.fit.android.cerberus.presentation.screens.minigames.archaeologist.ArchaeologistGameActivity"
            android:screenOrientation="landscape"/>

        <activity
            android:name="cz.cvut.fit.android.cerberus.presentation.screens.minigames.chief.ChiefGameActivity"
            android:screenOrientation="landscape"/>

        <activity
            android:name="cz.cvut.fit.android.cerberus.presentation.screens.minigames.quartermaster.QuartermasterGameActivity"
            android:screenOrientation="landscape"/>

        <activity
            android:name="cz.cvut.fit.android.cerberus.presentation.screens.minigames.bombexpert.BombExpertGameActivity"
            android:screenOrientation="landscape"/>

        <activity android:name=".presentation.screens.team.photo.TeamPhotoActivity"
            android:screenOrientation="landscape"/>
    </application>

</manifest>