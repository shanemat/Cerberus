<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"

    android:id="@+id/iAnswer"

    android:layout_width="match_parent"
    android:layout_height="wrap_content"

    android:paddingStart="@dimen/standard_padding_medium"
    android:paddingEnd="@dimen/standard_padding_medium"

    android:orientation="horizontal">

    <CheckBox
        android:id="@+id/iAnswerCheckBox"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <Space
        android:layout_width="@dimen/standard_padding_medium"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/iAnswerTextView"

        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:textSize="@dimen/text_size_big"
        tools:text="Testing answer text"/>

</LinearLayout>